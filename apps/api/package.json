{
  "name": "@mono/api",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "dev": "concurrently -n TYPES,API -c auto \"tsc -p tsconfig.types.json --watch --preserveWatchOutput\" \"bun run --hot --no-clear-screen src/index.ts\"",
    "build": "tsc -p tsconfig.types.json",
    "clean": "rm -rf dist",
    "start": "bun run src/index.ts",
    "typecheck": "tsc -b --pretty false",
    "lint": "bun run typecheck && eslint .",
    "lint:fix": "bun run typecheck && eslint . --fix"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "@mono/contracts": "workspace:*",
    "@mono/core": "workspace:*",
    "@mono/drizzle": "workspace:*",
    "hono": "^4.11.4",
    "jose": "^6.1.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@mono/tsconfig": "workspace:*",
    "@types/bun": "latest",
    "concurrently": "^9.2.1",
    "typescript": "^5.9.3"
  }
}
