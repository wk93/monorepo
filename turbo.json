{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": ["PORT", "DATABASE_URL", "JWT_SECRET", "NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "start": { "cache": false },
    "typecheck": {
      "cache": true
    },
    "lint": {
      "dependsOn": ["^typecheck"],
      "cache": true
    },
    "lint:fix": {
      "cache": false
    }
  }
}
