{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "types": ["vite/client"],

    "useDefineForClassFields": true,

    "moduleDetection": "force",
    "allowImportingTsExtensions": true,

    "noUncheckedSideEffectImports": true,

    "incremental": true
  }
}
